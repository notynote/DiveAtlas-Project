<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/signUpMainLayout"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/some_field_in_form_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="16dp">

        <ProgressBar
            android:id="@+id/signup_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

<!--    <com.google.android.material.textfield.TextInputLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/text_input_regUser"-->
<!--        app:counterEnabled="true"-->
<!--        app:counterMaxLength="20"-->
<!--        app:errorEnabled="true">-->

<!--        <com.google.android.material.textfield.TextInputEditText-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="@string/regUsername"-->
<!--            android:maxLength="20"-->
<!--            android:inputType="text"/>-->

<!--    </com.google.android.material.textfield.TextInputLayout>-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_input_regEmail"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FAFAFA"
                android:textColor="#FAFAFA"
                android:hint="@string/regEmail"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_input_regPassword"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/regPassword"
                android:backgroundTint="#FAFAFA"
                android:textColor="#FAFAFA"
                android:maxLength="20"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_input_regFirstName"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FAFAFA"
                android:textColor="#FAFAFA"
                android:hint="@string/regFirstName"
                android:maxLength="30"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_input_regLastName"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FAFAFA"
                android:textColor="#FAFAFA"
                android:hint="@string/regLastName"
                android:maxLength="30"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_input_regPhone"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FAFAFA"
                android:textColor="#FAFAFA"
                android:hint="@string/regPhone"
                android:maxLength="20"
                android:inputType="textPhonetic" />

        </com.google.android.material.textfield.TextInputLayout>

<!--        Horizontal divider-->

        <View
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FAFAFA"
            android:textSize="18sp"
            android:text="Certification agencies"/>

        <Spinner
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/agencyDropDown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#FAFAFA"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_input_regDiverCertLevel"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FAFAFA"
                android:textColor="#FAFAFA"
                android:hint="@string/regDiverCertLevel"
                android:maxLength="50"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_input_regDiverCertNo"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FAFAFA"
                android:textColor="#FAFAFA"
                android:hint="@string/regDiverCertNo"
                android:maxLength="50"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

<!--        <com.google.android.material.textfield.TextInputLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/text_input_regDiverCertAgent"-->
<!--            app:errorEnabled="true">-->

<!--            <com.google.android.material.textfield.TextInputEditText-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="@string/regDiverCertAgent"-->
<!--                android:maxLength="50"-->
<!--                android:inputType="text" />-->

<!--        </com.google.android.material.textfield.TextInputLayout>-->

        <Button
            android:layout_marginTop="15dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:onClick="confirmInput"/>

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/signUpBack"
            android:background="@color/colorLightBlue"
            android:textColor="#FAFAFA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"/>


    </LinearLayout>

</ScrollView>